<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="0dp"
    tools:context="com.hotel.phuctdse61834.hotelbooking.RoomDetailActivity">

    <LinearLayout
        android:id="@+id/tab_bar_layout"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:translationZ="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        >

        <TextView
            android:id="@+id/txt_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="$10"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_weight=".5"
            />

        <Button
            android:id="@+id/btn_booking"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Book"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_weight=".5"
            android:background="@color/colorTab"
            android:padding="10dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@id/tab_bar_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:padding="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tab_bar_layout"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:layout_margin="0dp">


            <ImageView
                android:id="@+id/room_detail_image"
                android:layout_width="0dp"
                android:layout_height="250dp"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/hotel" />

            <TextView
                android:id="@+id/txt_detail_room_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textAlignment="center"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/room_detail_image"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_detail_room_name"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:id="@+id/properties_bar">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight=".25">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_people"
                        android:layout_weight=".7"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_detail_people"
                        android:text="3 guests"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_weight=".3"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight=".25">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_double_bed"
                        android:layout_weight=".7"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_detail_bed"
                        android:text="3 guests"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_weight=".3"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight=".25">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_window"
                        android:layout_weight=".7"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_detail_window"
                        android:text="3 guests"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_weight=".3"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight=".25">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_available"
                        android:layout_weight=".7"/>
                    <TextView
                        android:id="@+id/txt_detail_available"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3 guests"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_weight=".3"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/services_list_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/properties_bar">

            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
