<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hotel.phuctdse61834.hotelbooking.BookingActivity">
    <LinearLayout
        android:id="@+id/payment_tab_bar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:translationZ="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <TextView
            android:id="@+id/txt_total_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="$10"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_weight=".5"
            />

        <Button
            android:id="@+id/btn_pay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Pay"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_weight=".5"
            android:background="@color/colorTab"
            android:padding="10dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@id/payment_tab_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:padding="0dp"
        app:layout_constraintBottom_toTopOf="@+id/payment_tab_bar"
        app:layout_constraintHorizontal_bias="1.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Spinner
                android:id="@+id/spinner_amount"
                android:layout_width="76dp"
                android:layout_height="28dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="0dp"
                app:layout_constraintLeft_toRightOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="@+id/textView8"
                tools:layout_editor_absoluteY="263dp" />

            <Spinner
                android:id="@+id/spinner_person"
                android:layout_width="74dp"
                android:layout_height="26dp"
                android:layout_marginLeft="92dp"
                android:layout_marginStart="93dp"
                app:layout_constraintLeft_toRightOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/textView7"
                tools:layout_editor_absoluteY="213dp"
                android:layout_marginTop="0dp" />

            <EditText
                android:id="@+id/txt_comment"
                android:layout_width="296dp"
                android:layout_height="53dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginLeft="1dp"
                app:layout_constraintLeft_toLeftOf="@+id/textView9"
                android:layout_marginTop="27dp"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                android:layout_marginStart="1dp" />

            <TextView
                android:id="@+id/txt_checkout_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="1dp"
                android:text="TextView"
                android:textSize="18sp"
                app:layout_constraintLeft_toRightOf="@+id/textView6"
                app:layout_constraintTop_toTopOf="@+id/textView6"
                android:layout_marginStart="42dp" />

            <TextView
                android:id="@+id/txt_arrival_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="66dp"
                android:text="TextView"
                android:textSize="18sp"
                app:layout_constraintLeft_toRightOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="@+id/textView5"
                android:layout_marginStart="66dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="@+id/textView8"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="@+id/textView7"
                android:layout_marginTop="27dp"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Person"
                android:textSize="18sp"
                android:layout_marginTop="35dp"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:layout_constraintLeft_toLeftOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checkout day"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="@+id/textView5"
                android:layout_marginTop="35dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrival Day"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="@+id/textView4"
                android:layout_marginTop="35dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ROOM TYPE"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="40dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.148"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
